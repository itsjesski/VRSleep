{
  "name": "vrsleep",
  "version": "1.1.0",
  "description": "A simple low usage app that makes sleeping in VR easier. Auto invite friends, set custom status, and more.",
  "author": "Jesski <jess@jesski.com>",
  "private": true,
  "productName": "VRSleep",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "changelog": "type CHANGELOG.md",
    "prepare-hooks": "node scripts/install-hooks.js",
    "postinstall": "node scripts/install-hooks.js"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "electron-reloader": "^1.2.3"
  },
  "build": {
    "appId": "com.vrsleep.app",
    "productName": "VRSleep",
    "icon": "src/images/icon.ico",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "itsjesski",
        "repo": "VRSleep",
        "releaseType": "draft"
      }
    ]
  }
}
